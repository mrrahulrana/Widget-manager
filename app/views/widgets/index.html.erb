<h1>Widgets</h1>-->
<%= stylesheet_link_tag "application" %>
<div class="header">
  <span class="header-text">Widgets</span>
  <div class="header-right">
  <%if !logged_in? %>
    <b>Welcome Guest</b>
    <%= link_to 'Login', new_session_path %>
  <%end%>
  <%if logged_in? %>
    <b><%= session[:username] %></b>
    <%= link_to 'Logout', logout_path %>
    <%= link_to 'Change Password', change_path %>
    <%= link_to 'Profile', user_path(session[:userid]) %>
  <%end%>
  </div>
</div>

<div style="padding:16px">

  <div style="">
  
   <div class="search-container">
   <%= form_tag search_path, :method => :post, class: "widgetform" do %>
      <%= text_field_tag :searchkey %>
      <button type="submit" value="search">Search</button>
      <%if logged_in? %>
      <span style="float: right;"><button><%= link_to 'Create Widget', new_widget_path %></button></span>
      <%end%>
      <span style="float: right;"><button><%= link_to 'Clear search result', widgets_path %></button></span>
      <% end %>
  </div>

 
</div>
 

</div>
<div class="widget-container">
<% @widgetlist.widgets.each do |l| %>
  <%= render partial: 'widgetitem', locals: {widget: l} %>

<% end %>
</div>





