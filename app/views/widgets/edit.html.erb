<%= stylesheet_link_tag "application" %>
<div class="register-container">
<%= form_tag widget_path, :method => :put do %>
   <h1>Edit User Details</h1>
   <div class="container">
   <b>Name</b> <%=text_field_tag :name, @widget.name%><br />
   <b>Description<b> <%=text_field_tag :description, @widget.description%><br/><br/>
  
   <div class="clearfix">
      <button type="button" class="registerPageBtn cancelbtn"><%= link_to 'Cancel', widgets_path %></button>
      
      <button type="submit" class="registerPageBtn signupbtn">Update</button>
    </div>
   </div>
   </div>
<%end%>
</div>

