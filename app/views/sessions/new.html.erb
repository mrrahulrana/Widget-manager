
<%= stylesheet_link_tag "application" %>
<div class="login-container">
 <%= form_tag '/login' do %>

  <div class="container" style="height:410px;">
  	<h1>Sign In</h1>
    <label for="uname"><b>Username</b></label>
    <!--<input type="text" placeholder="Enter Username" name="uname" required>-->
    <%= text_field_tag :username %>

    <label for="psw"><b>Password</b></label>
    <!--<input type="password" placeholder="Enter Password" name="psw" required>-->
    <%= password_field_tag :password%>

        
    <button type="submit" class="loginPageBtn">Login</button>

    <label>
      <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
  
  <div class="container" style="background-color:#f1f1f1; height:82px;">
    <button type="button" class="loginPageBtn cancelbtn"><%= link_to 'Back', welcome_path %></button>
    <span class="psw">Forgot <a href="#">password?</a></span>
  </div>
 
</div>
 <%end%>
</div>
