<%= stylesheet_link_tag "application" %>
<div class="change-password-container">
<%= form_tag changepassword_path do %>
  <div class="container">
    <h1>Change Password</h1>
    <p>Please fill in this form to change the Password.</p>
    <hr>

    <label for="email"><b>Email</b></label>
    <%= text_field_tag :email %>

    <label for="psw"><b>Old Password</b></label>
    <%= password_field_tag :oldpassword%>
    
    <label for="psw"><b>Create New Password</b></label>
    <%= password_field_tag :password%>

    <label for="psw-repeat"><b>Confirm New Password</b></label>
    <%= password_field_tag :confirmnewpassword%>
    
    <div class="clearfix">
      <button type="button" class="changePasswordPageBtn cancelbtn"><%= link_to 'Cancel', widgets_path %></button>
      <button type="submit" class="changePasswordPageBtn submitbtn">Submit</button>
    </div>
  </div>
<%end%>
</div>