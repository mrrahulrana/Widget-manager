<%= stylesheet_link_tag "application" %>
<div class="change-password-container">
<form action="/">
  <div class="container">
    <h1>Change Password</h1>
    <p>Please fill in this form to change the Password.</p>
    <hr>

    <label for="email"><b>Email</b></label>
    <p>abc@abc.com</p>

    <label for="psw"><b>Old Password</b></label>
    <input type="password" placeholder="Enter Old Password" name="psw-old" required>
    
    <label for="psw"><b>Create New Password</b></label>
    <input type="password" placeholder="Enter New Password" name="psw" required>

    <label for="psw-repeat"><b>Confirm New Password</b></label>
    <input type="password" placeholder="Enter New Password" name="psw-repeat" required>
    
    <div class="clearfix">
      <button type="button" class="changePasswordPageBtn cancelbtn">Cancel</button>
      <button type="submit" class="changePasswordPageBtn submitbtn">Submit</button>
    </div>
  </div>
</form>
</div>
