
<div class="register-container">
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <div class="field">
    <b><%= form.label :firstname %></b>
    <%= form.text_field :firstname, id: :user_firstname %>
  </div>

  <div class="field">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, id: :user_lastname %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmed %>
    <%= form.password_field :password_confirmed, id: :user_password_confirmed %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :imageurl %>
    <%= form.text_field :imageurl, id: :user_imageurl %>
  </div>

 <label>
      <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
 </label>
  <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

    <div class="clearfix">
      <button type="button" class="registerPageBtn cancelbtn"><%= link_to 'Cancel', welcome_path %></button>
      
      <button type="submit" class="registerPageBtn signupbtn">Create</button>
    </div>
  </div>
<% end %>
</div>
